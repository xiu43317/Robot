            android:layout_height="wrap_content"
            android:text="Link"
            android:id="@+id/btn1"
            android:layout_alignParentRight="true"/>

        <EditText
            android:id="@+id/ev"
            android:layout_width="240dp"
            android:layout_height="wrap_content" />
        
        
    </RelativeLayout>
       
    <WebView 
        android:id="@+id/wv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="6"
        />
